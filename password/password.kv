#:kivy 2.0.0
<Password>:
    canvas.before:
        Color:
            rgba: 0.56, 0.93, 0.56, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    padding: 20
    spacing: 10
    size_hint: None, None
    size: 400, 300
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Label:
        text: "Your password"
        color: 1, 1, 1, 1
        bold: True

    #Settings
    Button:
        text: '0'
        size_hint_x: None
        width: 50
        on_release: root.open_settings()
        background_normal: ''
        background_color: 0, 0, 0, 0
        color: 1, 1, 1, 1

    TextInput:
        id: length_input
        text: ''
        multiline: False
        input_filter: 'int'
        hint_text: "Введите длину пароля"
        fond_size: 20
        size_hint_y: None
        padding: [10, 10, 10, 10]
        background_color: 0.9, 0.9, 0.9, 1
        foregroung_color: 0, 0, 0, 1
        cursor_color: 0, 0, 0, 1


    Button:
        text: "Сгенерировать пароль"
        on_press: root.on_generate_password(self)
        size_hint_y: None
        background_color: 0.2, 0.6, 0.9, 1
        color: 1, 1, 1, 1
        background_normal: ''
        background_down: ''


    Label:
        id: result_label
        text: ''
        halign: 'center'
        valing: 'middle'
        color: 0.1, 0.1, 0.1, 1
        size_hint_y: None
        height: 40
    
