#:kivy 2.0.0
<Password>:
    canvas.before:
        Color:
            rgba: app.theme_cls.bg_normal
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    padding: [20, 10]
    spacing: 8
    size_hint: None, None
    size: 400, 280
    pos_hint: {'center_x': 0.5, 'top': 0.95}

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        spacing: 10

    Label:
        text: "Ваш надежный пароль"
        color: app.theme_cls.text_color
        bold: True
        font_size: 25


    #Settings
    MDIconButton:
        icon: "dots-vertical"
        on_release: root.open_settings()
        text_color: 0, 0, 0, 1
   
    TextInput:
        id: length_input
        hint_text: "Введите длину пароля"
        multiline: False
        input_filter: 'int'
        size_hint_y: None
        height: 40
        background_normal: ''
        background_active: ''
        foreground_color: 0, 0, 0, 1
        cursor_color: 0, 0, 0, 1
        padding: [10, 10, 10, 10]
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                points: self.x, self.y, self.right, self.y
                width: 1

    Button:
        text: "Сгенерировать пароль"
        on_press: root.on_generate_password(self)
        size_hint_y: None
        height: 50
        background_normal: ''
        background_color: 0, 0, 0, 0
        background_down: ''
        color: 0, 0, 0, 1
        canvas.before:
            Color:
                rgba: 0.2, 0.6, 0.9, 1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]


    Label:
        id: result_label
        text: ''
        halign: 'center'
        valign: 'middle'
        color: app.theme_cls.text_color 
        size_hint_y: None
        height: 40
    
